{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],

  "permissions": [
    { "identifier": "core:default" },
    { "identifier": "opener:default" },
    { "identifier": "fs:allow-download-write" },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    },
    {
      "identifier": "core:path:allow-resolve-directory",
      "allow": [{ "path": "$DOWNLOAD" }]
    },
    { "identifier": "dialog:default" },

    { "identifier": "fs:default" },

    { "identifier": "fs:allow-download-read" },
    { "identifier": "fs:allow-download-read-recursive" },

    { "identifier": "fs:allow-download-meta" },
    { "identifier": "fs:allow-download-meta-recursive" }
  ]
}
